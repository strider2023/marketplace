<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_splash_gradient"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.touchmenotapps.marketplace.signup.RegistrationOTPActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:cropToPadding="true"
        android:padding="10dp"
        android:src="@drawable/ic_sms"
        android:elevation="10dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="@style/LoginEdittextCard">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/otp_enter_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Your OTP"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="32sp"
            android:gravity="center"
            android:textColorHint="@android:color/white"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Please enter the OTP sent to via SMS/Email."
        android:textSize="14sp"
        android:gravity="center_horizontal|top"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/otp_resend_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Resend OTP"
        android:backgroundTint="#fced2a"
        android:textColor="@color/colorPrimary"
        android:elevation="5dp"/>

</LinearLayout>
