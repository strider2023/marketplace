<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:tint="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_app_icon"
            android:layout_width="@dimen/splash_image"
            android:layout_height="@dimen/splash_image"
            android:src="@drawable/ic_shop"
            android:transitionName="splash" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/splash_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/splash_margin"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/splash_text"
            android:transitionName="splash" />

    </LinearLayout>

</RelativeLayout>